            <artifactId>spring-kafka</artifactId>
            <version>2.9.0</version> <!-- Hoặc 3.0.x nếu phù hợp với dự án -->
        </dependency>

        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-mail</artifactId>
